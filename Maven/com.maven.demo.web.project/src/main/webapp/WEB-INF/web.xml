<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>UpdateDepartment</display-name>
  <welcome-file-list>
    <welcome-file>/views/login.html</welcome-file>
  </welcome-file-list>
    <servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.UpdateDepartment.LoginServlet</servlet-class>
  </servlet>
   <servlet>
		<servlet-name>DeptPage</servlet-name>
		<jsp-file>/views/deptPage.html</jsp-file>
  </servlet>
  <servlet>
		<servlet-name>DeptServlet</servlet-name>
		<servlet-class>com.UpdateDepartment.DeptServlet</servlet-class>
  </servlet>
   <servlet>
		<servlet-name>DeptDetailServlet</servlet-name>
		<servlet-class>com.UpdateDepartment.DeptDetailServlet</servlet-class>
  </servlet>
  <servlet>
		<servlet-name>DeptCrudServlet</servlet-name>
		<servlet-class>com.UpdateDepartment.DepartmentCrudServlet</servlet-class>
  </servlet>
  <servlet>
		<servlet-name>LoginFail</servlet-name>
		<jsp-file>/views/login.html</jsp-file>
	</servlet>
   <servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/loginServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginFail</servlet-name>
		<url-pattern>/loginFail</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeptPage</servlet-name>
		<url-pattern>/deptPage</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeptServlet</servlet-name>
		<url-pattern>/deptServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeptDetailServlet</servlet-name>
		<url-pattern>/deptDetailServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeptCrudServlet</servlet-name>
		<url-pattern>/deptCrud</url-pattern>
	</servlet-mapping>
</web-app>