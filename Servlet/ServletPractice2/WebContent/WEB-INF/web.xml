<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<welcome-file-list>
		<welcome-file>/views/login.html</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>LoginPage</servlet-name>
		<servlet-class>com.servletpractice2.LoginPage</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoginSuccess</servlet-name>
		<servlet-class>com.servletpractice2.LoginSuccess</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PrepSuccess</servlet-name>
		<servlet-class>com.servletpractice2.PrepSuccess</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoginFailure</servlet-name>
		<jsp-file>/views/failure.html</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginPage</servlet-name>
		<url-pattern>/loginPage</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginSuccess</servlet-name>
		<url-pattern>/loginSuccess</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginFailure</servlet-name>
		<url-pattern>/loginFailure</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PrepSuccess</servlet-name>
		<url-pattern>/prepSuccess</url-pattern>
	</servlet-mapping>

</web-app>