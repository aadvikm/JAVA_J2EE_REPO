<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>LocationDeptEmpPortal</display-name>
  <welcome-file-list>
    <welcome-file>/views/login.jsp</welcome-file>
  </welcome-file-list>
   <servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.LocDeptEmp.LoginServlet</servlet-class>
  </servlet>
   <servlet>
		<servlet-name>LocationServlet</servlet-name>
		<servlet-class>com.LocDeptEmp.LocationServlet</servlet-class>
  </servlet>
   <servlet>
		<servlet-name>DepartmentServlet</servlet-name>
		<servlet-class>com.LocDeptEmp.DepartmentServlet</servlet-class>
  </servlet>
   <servlet>
		<servlet-name>EmployeeServlet</servlet-name>
		<servlet-class>com.LocDeptEmp.EmployeeServlet</servlet-class>
  </servlet>
   <servlet>
		<servlet-name>LoginFail</servlet-name>
		<jsp-file>/views/login.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>com.LocDeptEmp.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/loginServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginFail</servlet-name>
		<url-pattern>/loginFail</url-pattern>
	</servlet-mapping>
	 <servlet-mapping>
		<servlet-name>LocationServlet</servlet-name>
		<url-pattern>/locationServlet</url-pattern>
	</servlet-mapping>
	 <servlet-mapping>
		<servlet-name>DepartmentServlet</servlet-name>
		<url-pattern>/deptServlet</url-pattern>
	</servlet-mapping>
	 <servlet-mapping>
		<servlet-name>EmployeeServlet</servlet-name>
		<url-pattern>/empServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logoutServlet</url-pattern>
	</servlet-mapping>
</web-app>